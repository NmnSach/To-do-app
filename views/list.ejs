<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List</title>
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
    <div class="box">
        
        <h1 id="heading"><ion-icon name="lock-open-outline" class="lock-icon"></ion-icon>Todo List</h1>
    </div>
    <div class="box">
        <% dayej.forEach(function(items){ %>

            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%=items._id %>" onchange="this.form.submit()">
                    <p>
                        <%= items.name%>
                    </p>
                </div>
            </form>

            <% }) %>

                <form action="/list" method="post">
                    <input type="text" name="ele1" placeholder="Enter the task">
                    <button type="submit">+</button>
                </form>

    </div>

    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

</body>

</html>